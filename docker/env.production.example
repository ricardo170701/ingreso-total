# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ============================================
# Copia este archivo a .env en la raíz del proyecto y completa con tus valores reales
# NUNCA subas el archivo .env al repositorio

APP_NAME="Escáner Total"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tu-dominio.com

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# ============================================
# BASE DE DATOS
# ============================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=escaner_total_prod
DB_USERNAME=escaner_user_prod
DB_PASSWORD=TU_PASSWORD_SEGURA_AQUI_MIN_16_CARACTERES
MYSQL_ROOT_PASSWORD=OTRA_PASSWORD_SEGURA_PARA_ROOT
DB_EXTERNAL_PORT=3307

# ============================================
# CACHE Y SESIONES
# ============================================
# Para producción, considera usar Redis:
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis
# Si no tienes Redis, usa file:
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_LIFETIME=120

BROADCAST_DRIVER=log
FILESYSTEM_DISK=public

# ============================================
# EMAIL (SMTP)
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.tu-servidor.com
MAIL_PORT=587
MAIL_USERNAME=tu-email@dominio.com
MAIL_PASSWORD=tu-password-email
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@tu-dominio.com
MAIL_FROM_NAME="Escáner Total"

# ============================================
# API KEYS Y SEGURIDAD
# ============================================
# Genera claves seguras de al menos 32 caracteres
# Puedes usar: openssl rand -hex 32
ACCESS_DEVICE_KEY=GENERAR_CLAVE_32_CARACTERES_ALEATORIOS
DOOR_API_KEY=GENERAR_CLAVE_32_CARACTERES_ALEATORIOS
DOOR_EMERGENCY_PORT=8000

# ============================================
# OPENAI (Opcional)
# ============================================
# Solo si usas análisis de imágenes en vitácora UPS
OPENAI_API_KEY=sk-...

# ============================================
# SWAGGER
# ============================================
L5_SWAGGER_CONST_HOST=${APP_URL}

# ============================================
# DOCKER - PRODUCCIÓN
# ============================================
# En producción, NUNCA ejecutes migraciones/seeders automáticamente
RUN_MIGRATIONS=false
RUN_SEEDERS=false
SEEDER_CLASS=Database\\Seeders\\DatabaseSeeder

# ============================================
# REDIS (Opcional - si lo configuras)
# ============================================
# REDIS_HOST=redis
# REDIS_PASSWORD=null
# REDIS_PORT=6379
# REDIS_DB=0

